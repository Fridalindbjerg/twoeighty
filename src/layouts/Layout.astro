---
import "/src/css/base.css";
import ButtonHeader from "../components/Button.astro";
import Button from "../components/Button.astro";
import ButtonFooter from "../components/ButtonFooter.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>280</title>
  </head>
  <body>
    <header>
      <nav>
        <ul class="menu">
          <li>
            <div class="link-group">
              <a href="/about.astro">ABOUT</a>
              <a href="/archive.astro">ARCHIVE</a>
            </div>
          </li>
          <li>
            <a href="/index.astro">
              <img src="/logo.png" alt="280 logo" />
            </a>
          </li>
          <li>
            <ButtonHeader />
          </li>
        </ul>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <h5>Twoeighty production co.</h5>

      <div class="footer-grid">
        <div class="footer-container">
          <a href="/about.astro">ABOUT</a>
          <a href="/archive.astro">ARCHIVE</a>
        </div>
        <div class="footer-container">
          <p>CONTACT</p>
          <p>mail: <br />info@280.dk</p>
          <p>phone: <br />+45 31 46 20 10</p>
        </div>
        <div class="footer-container">
          <p>SOCIALS</p>
          <a href="https://www.instagram.com/280cph/"
            ><img src="/insta_white.webp" alt="Instagram logo" /></a
          >
          <a href="https://vimeo.com/280cph"
            ><img src="vimeo_white.webp" alt="Vimeo logo" /></a
          >
          <a
            href="https://www.linkedin.com/company/280cph/?originalSubdomain=dk"
            ><img src="linkedin_white.webp" alt="LinkedIn logo" /></a
          >
        </div>
        <div class="button">
          <ButtonFooter />
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  /**** HEADER ****/
  header {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
    background-color: var(--background-color);
  }

  nav {
    margin: 20px;
  }

  ul {
    list-style-type: none;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }

  .link-group {
    display: flex;
    flex-direction: row;
    gap: 15px;
  }

  /**** FOOTER ****/
  .footer-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
  }

  .footer-container {
    display: flex;
    flex-direction: column;
  }
</style>
