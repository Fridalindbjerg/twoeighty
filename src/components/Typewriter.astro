---
const lines = [
  { text: "we are", class: "title" },
  { text: "twoeighty" },
  { text: "production co." },
];
---

<h1 id="typewriter">
  {
    lines.map((line) => (
      <>
        <>
          <span
            class="line"
            data-content={line.text}
            data-class={line.class ?? ""}
          />
          <br />
        </>
      </>
    ))
  }
  <span class="caret">|</span>
</h1>

<style>
  h1 {
    font-size: clamp(1.375rem, 6vw, 5rem);
    display: inline-block;
    overflow: hidden;
    white-space: nowrap;
  }

  #typewriter {
    display: inline-block;
    position: relative;
  }

  .caret {
    position: absolute;
    animation: blink 1s step-end infinite;
    display: inline-block;
  }

  @keyframes blink {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
  }

  @media (width >= 1024px) {
    h1 {
      text-align: left;
    }
  }
</style>

