---
import "/src/css/base.css";
---

<button onclick="window.location.href='/archive'" class="corner-button">
  <span class="corner top-left"></span>
  <span class="corner top-right"></span>
  <span class="corner bottom-left"></span>
  <span class="corner bottom-right"></span>
  SEE FULL ARCHIVE</button
>

<style>
  .corner-button {
    color: var(--red-font);
    position: relative;
    background: transparent;
    border: none;
    font-size: clamp(0.5rem, 1.5vw, 1.25rem);
    font-weight: 500;
    padding: 7px 9px;
    cursor: pointer;
  }

  .corner {
    position: absolute;
    width: 5px;
    height: 5px;
    border: 1.3px solid var(--red-font);
  }

  .top-left {
    top: 0;
    left: 0;
    border-right: none;
    border-bottom: none;
  }

  .top-right {
    top: 0;
    right: 0;
    border-left: none;
    border-bottom: none;
  }

  .bottom-left {
    bottom: 0;
    left: 0;
    border-right: none;
    border-top: none;
  }

  .bottom-right {
    bottom: 0;
    right: 0;
    border-left: none;
    border-top: none;
  }

  .corner-button:hover {
    transform: scale(1.1);
  }

  @media (width >= 1000px) {
    .corner {
      width: 7px;
      height: 7px;
    }
  }

  @media (width >= 1200px) {
    .corner {
      width: 9px;
      height: 9px;
    }
  }
</style>
