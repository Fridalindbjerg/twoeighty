---
import Socials from "../components/Socials.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section class="header_img">
    <h1>
      <span class="title">Get in touch with</span>
      <br />
      Twoeighty <br /> production co.
    </h1>
  </section>
  <section class="form_background">
    <h3>Send a message</h3>
    <form name="Contact">
      <p class="f1">
        <label for="your-name"></label>
        <input id="your-name" name="yname" type="text" placeholder="Name" />
      </p>
      <p class="f2">
        <label for="company-name"></label>
        <input id="company-name" name="cname" type="text" placeholder="Company" />
      </p>
      <p class="f3">
        <label for="mail"></label>
        <input id="mail" name="user_email" type="email" placeholder="Email" />
      </p>
      <p class="f4">
        <label for="subject"></label>
        <input id="subject" name="subject" type="text" placeholder="Subject" />
      </p>
      <p class="f5">
        <label for="msg"></label>
        <textarea id="msg" name="user_message">Message </textarea>
      </p>
      <p class="f6">
        <button type="submit" class="corner-button">
          <span class="corner top-left"></span>
          <span class="corner top-right"></span>
          <span class="corner bottom-left"></span>
          <span class="corner bottom-right"></span>
          SUBMIT
        </button>
      </p>
    </form>
  </section>

  <Socials />
</Layout>

<style>
  h1 {
    text-align: center;
    padding-bottom: 150px;
  }

  .header_img {
    background-image: url("/contact1.png");
    background-repeat: no-repeat;
    background-size: cover;
    /* background-position: center; */
    width: 100vw;
    height: 70vh;
    position: relative;
    align-content: center;
  }

  .form_background {
    background-color: black;
    color: white;
    padding: 40px;
    width: 70%;
    max-width: 350px;
    margin: 0 auto;
    position: relative;
    top: -200px;
    z-index: 10;
  }

  .form_background h3 {
    color: white;
    text-align: center;
    margin-bottom: 30px;
    margin-top: 0px;
  }

  form {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
  }

  input,
  textarea {
    background-color: transparent;
    color: white;
    border: none;
    border-bottom: 1px solid white;
    /* padding: 5px 5px; */
    font-size: 12px;
    width: 100%;
    font-family: Arial, Helvetica, sans-serif;
  }

  input::placeholder {
    color: white;
  }

  .f1 {
    grid-column: 1 /2;
  }
  .f2 {
    grid-column: 2 /3;
  }

  .f3,
  .f4,
  .f5,
  .f6 {
    grid-column: 1 / 3;
  }

  .f6 {
    text-align: center;
  }

  .corner-button {
    position: relative;
    background: transparent;
    border: none;
    font-size: 12px;
    font-weight: 500;
    padding: 7px 9px;
    cursor: pointer;
    margin-right: 30px;
    color: white;
  }

  .corner {
    position: absolute;
    width: 7px;
    height: 7px;
    border: 1.5px solid white;
  }

  .top-left {
    top: 0;
    left: 0;
    border-right: none;
    border-bottom: none;
  }

  .top-right {
    top: 0;
    right: 0;
    border-left: none;
    border-bottom: none;
  }

  .bottom-left {
    bottom: 0;
    left: 0;
    border-right: none;
    border-top: none;
  }

  .bottom-right {
    bottom: 0;
    right: 0;
    border-left: none;
    border-top: none;
  }

  @media (width >= 500px) {
    .corner-button,
    input,
    textarea {
      font-size: 14px;
    }
  }

  @media (width >= 600px) {
    .form_background {
      padding: 70px;
    }
  }

  @media (width >= 700px) {
    .corner-button,
    input,
    textarea {
      font-size: 16px;
    }
  }
  @media (width >= 1000px) {
    .corner-button,
    input,
    textarea {
      font-size: 18px;
    }
  }
</style>
