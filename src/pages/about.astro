        </ul>
      </div>
      <div class="contact">
        <h4>Contact us</h4>
        <p>mail: info@280.dk</p>
        <p>phone: +45 31 46 20 10</p>
      </div>
      <div class="button">
        <Button />
      </div>
    </section>
  </section>
</Layout>

<style>
  article {
    margin-bottom: 150px;
  }

  article:first-of-type {
    margin-bottom: 150px;
    margin-top: 150px;
  }

  .intro {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    margin-top: 50px;
  }

  .intro img {
    grid-column: 1 / 3;
    grid-row: 1;
  }

  h1 {
    margin: auto;
    grid-column: 1 / 5;
    grid-row: 1;
    margin-right: 0;
  }
  h2 {
    margin-bottom: 20px;
  }
  .grid_1 {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
  }

  .who {
    grid-column: 1 / span 4;
    grid-row: 1;
    max-width: 450px;
  }

  .philosophy {
    grid-column: 2 / span 4;
    grid-row: 2;
    max-width: 450px;
    text-align: left;
  }

  .who h3,
  .philosophy h3 {
    margin-bottom: 0;
  }

  .who p,
  .philosophy p {
    margin-top: 5px;
  }

  ul {
    font-size: 12px;
  }

  ul {
    list-style: none;
    text-align: left;
    padding: 0;
  }

  li {
    padding-bottom: 3px;
  }

  .grid_2 {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    justify-items: center;
    margin-top: 50px;
    margin-bottom: 100px;
    row-gap: 40px;
  }

  .services {
    text-align: center;
  }

  .background {
    background-color: black;
    max-width: 100%;
    height: 310px;
    overflow: hidden;
    display: flex;
    align-items: center;
  }

  .slider-container {
    width: 100%;
    overflow: hidden;
  }

  .slider-track {
    display: flex;
    width: max-content;
    animation: scroll 20s linear infinite;
  }
  .slider-track img {
    width: 10em;
    padding-left: 0.6em;
    height: auto;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .intro img {
    width: 300px;
  }

  @media (width >= 600px) {
    .intro img {
      width: 350px;
    }
  }

  @media (width >= 700px) {
    .intro img {
      width: 400px;
    }
  }

  @media (width >= 800px) {
    .intro img {
      width: 500px;
    }

    .philosophy {
      grid-column: 3 / span 3;
    }

    .grid_2 {
      grid-template-columns: repeat(3, 1fr);
    }

    .button {
      grid-row: 1;
      grid-column: 1 / span 3;
      padding: 100px;
    }
  }

  @media (width >= 1000px) {
    .intro img {
      width: 600px;
    }

    .philosophy,
    .who {
      max-width: 550px;
    }

    .slider-track img {
      width: 13em;
    }

    .background {
      height: 380px;
    }
  }

  @media (width >= 1200px) {
    .intro img {
      width: 750px;
    }

    h1 {
      margin-right: 150px;
    }
    .grid_1 {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
    }

    .philosophy {
      grid-column: 4 / 8;
    }

    .philosophy,
    .who {
      max-width: 700px;
    }

    .slider-track img {
      width: 16em;
    }

    .background {
      height: 480px;
    }

    li {
      font-size: 1.125rem;
    }
  }
</style>
